<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="@drawable/borderpoup"
        android:padding="8dp">

        <RelativeLayout android:id="@+id/widget_click_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >

            <ImageView android:id="@+id/widget_add_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_more_vert_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Note"
                android:fontFamily="sans-serif-medium"
                android:layout_toEndOf="@+id/widget_add_image"
                android:layout_alignTop="@id/widget_add_image"
                android:layout_alignBottom="@+id/widget_add_image"
                android:layout_marginStart="25dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:padding="8dp"
            >

            <ImageView android:id="@+id/widget_theme_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_more_vert_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Theme"
                android:fontFamily="sans-serif-medium"
                android:layout_toEndOf="@+id/widget_theme_image"
                android:layout_alignTop="@id/widget_theme_image"
                android:layout_alignBottom="@+id/widget_theme_image"
                android:layout_marginStart="25dp"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:padding="8dp"
            >

        <ImageView android:id="@+id/widget_about_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_more_vert_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About App"
            android:layout_toEndOf="@+id/widget_about_image"
            android:layout_alignTop="@id/widget_about_image"
            android:fontFamily="sans-serif-medium"
            android:layout_alignBottom="@+id/widget_about_image"
            android:layout_marginStart="25dp"/>

        </RelativeLayout>
    </FrameLayout>

</FrameLayout>